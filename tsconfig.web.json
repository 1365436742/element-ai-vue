{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "types": ["unplugin-vue-macros/macros-global"],
    "skipLibCheck": true
  },
  "include": [
    "packages/utils/vue3.3.polyfill.ts",
    "packages",
    "typings/env.d.ts",
    "typings/vue-shim.d.ts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.vue",
    "types/*.ts",
    "docs"
  ],
  "exclude": ["node_modules", "**/dist", "**/*.md"]
}
